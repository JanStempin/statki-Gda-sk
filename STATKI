#### Strzelanie i rozstrzyganie gry ####
#### print(len(pola_gracza)) ####

##### lista żeby komputer nie powtarzał już strzelanych pól ####
juz_strzelane = []
while True:
    print(pola_gracza)
    print(p_statki)
    czy_przerwac_gracz = 0
    czy_przerwac_komputer = 0
    if len(pola_gracza[0]) == 0:
        czy_przerwac_gracz+=1
    if len(pola_gracza[1]) == 0:
        czy_przerwac_gracz+=1
    if len(pola_gracza[2]) == 0:
        czy_przerwac_gracz+=1
    if len(pola_gracza[3]) == 0:
        czy_przerwac_gracz+=1
    if len(pola_gracza[4]) == 0:
        czy_przerwac_gracz+=1
    if len(pola_gracza[5]) == 0:
        czy_przerwac_gracz+=1
    if len(p_statki[0]) == 0:
        czy_przerwac_komputer+=1
    if len(p_statki[0]) == 0:
        czy_przerwac_komputer+=1
    if len(p_statki[1]) == 0:
        czy_przerwac_komputer+=1
    if len(p_statki[2]) == 0:
        czy_przerwac_gracz+=1
    if len(p_statki[3]) == 0:
        czy_przerwac_komputer+=1
    if len(p_statki[4]) == 0:
        czy_przerwac_komputer+=1
    if len(p_statki[5]) == 0:
        czy_przerwac_komputer+=1
    if czy_przerwac_gracz == 5:
        break
    if czy_przerwac_komputer == 5:
        break
    else:
        x_s = int(input("podaj wsp x do strzlu: "))
        y_s = int(input("podaj wsp y do strzlu: "))
        os.system("cls")
        strzal = [x_s, y_s]
        if strzal in pola_gracza[0]:
            print("TAK")
            pola_gracza[0].remove(strzal)
            if len(pola_gracza[0]) == 0:
                print("statek poszedł na dno!")
 
        elif strzal in pola_gracza[1]:
            print("TAK")
            pola_gracza[1].remove(strzal)
            if len(pola_gracza[1]) == 0:
                print("statek poszedł na dno!")

        elif strzal in pola_gracza[2]:
            print("TAK")
            pola_gracza[2].remove(strzal)
            if len(pola_gracza[2]) == 0:
                print("statek poszedł na dno!")

        elif strzal in pola_gracza[3]:
            print("TAK")
            pola_gracza[3].remove(strzal)
            if len(pola_gracza[3]) == 0:
                print("statek poszedł na dno!")
 
        elif strzal in pola_gracza[4]:
            print("TAK")
            pola_gracza[4].remove(strzal)
            if len(pola_gracza[4]) == 0:
                print("statek poszedł na dno!")
  
        elif strzal in pola_gracza[5]:
            print("TAK")
            pola_gracza[5].remove(strzal)
            if len(pola_gracza[5]) == 0:
                print("statek poszedł na dno!")
   
        else:
            print("pudło!")

        print("teaz strzela komputer!!!!!!!!!!!!!!!!!!!!!")

        while True:
            x_komp = random.randint(1,10)
            y_komp = random.randint(1,10)
            strzal_komputera = [x_komp,y_komp]
            print(strzal_komputera)
            if strzal_komputera in juz_strzelane:
                True
            else:
                juz_strzelane.append(strzal_komputera)
                break
        print(juz_strzelane)
        if strzal_komputera in p_statki[0]:
            print("Trafiony!")
            p_statki[0].remove(strzal_komputera)
            if len(p_statki[0]) == 0:
                print("statek poszedł na dno!")
    
        elif strzal_komputera in p_statki[1]:
            print("Trafiony!")
            p_statki[1].remove(strzal_komputera)
            if len(p_statki[1]) == 0:
                print("statek poszedł na dno!")
   
        elif strzal_komputera in p_statki[2]:
            print("Trafiony!")
            p_statki[2].remove(strzal_komputera)
            if len(p_statki[2]) == 0:
                print("statek poszedł na dno!")

        elif strzal_komputera in p_statki[3]:
            print("Trafiony!")
            p_statki[3].remove(strzal_komputera)
            if len(p_statki[3]) == 0:
                print("statek poszedł na dno!")
    
        elif strzal_komputera in p_statki[4]:
            print("Trafiony!")
            p_statki[4].remove(strzal_komputera)
            if len(p_statki[4]) == 0:
                print("statek poszedł na dno!")
 
        elif strzal_komputera in p_statki[5]:
            print("Trafiony!")
            p_statki[5].remove(strzal_komputera)
            if len(p_statki[5]) == 0:
                print("statek poszedł na dno!")
   
        else:
            print("pudło!")
    
    
if czy_przerwac_gracz == 5:
